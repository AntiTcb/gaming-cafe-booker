{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "addLabels": [
        "dependencies"
    ],
    "dependencyDashboard": true,
    "extends": [
        "config:recommended",
        "group:allNonMajor",
        ":semanticCommitTypeAll(fix)"
    ],
    "ignoreDeps": [
        "@types/node",
        "node"
    ],
    "packageRules": [
        {
            "groupName": "vite",
            "matchPackageNames": [
                "vite"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ]
        }
    ],
    "rangeStrategy": "bump",
    "timezone": "America/New_York"
}
